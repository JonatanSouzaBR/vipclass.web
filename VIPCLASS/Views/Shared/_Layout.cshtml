        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        border-radius: 35px !important;
    }

    body {
        background-color: rgb(18, 18, 18) !important;
        font-family: "Circular Std", Helvetica, Arial, sans-serif;
        font-weight: 400;
        line-height: 1.4;
        color: silver !important;
    }

    .navCustom {
        background-color: black !important;
        color: rgb(255, 255, 255)
    }

    .imageborder {
        border-radius: 25px 25px 25px 25px;
    }

    .card-header-custom {
        padding: 0.75rem 1.25rem;
        margin-bottom: 0;
        background-color: #141414;
        color: silver;
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        border-top: 1px solid rgba(0, 0, 0, 0.125);
        border-left: 1px solid rgba(0, 0, 0, 0.125);
        border-right: 1px solid rgba(0, 0, 0, 0.125);
        display: flex;
        @*margin: 10px;*@
        border-radius: 25px 25px 25px 25px;
    }

    .card-custom {
        position: relative;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-direction: column;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #212529;
        background-clip: border-box;
        border: 1px solid #212529;
        border-radius: 25px 25px 25px 25px !important;
    }

    .card-custom2 {
        background-color: #141414;
        background-clip: border-box;
        border: 10px solid #141414;
        border-radius: 25px 25px 25px 25px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        background-clip: padding-box;
    }

    .card-footer-custom {
        padding: .75rem 1.25rem;
        background-color: #141414;
        border-top: 1px solid rgba(0,0,0,.125);
        margin: 4px;
    }

    .card-body-custom {
        -ms-flex: 1 1 auto;
        flex: 1 1 auto;
        padding: 1.25rem;
        background-color: #1f1f1f;
        color: silver !important;
        border-radius: 25px 25px 25px 25px;
        background-clip: border-box;
    }

    .card-group-item-custom {
        display: block;
        background-color: #1f1f1f;
        color: silver !important;
        border-radius: 25px 25px 25px 25px;
    }

</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VIP Class - NFT Master Classes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navCustom mb-3">
            <div class="container">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/viplogo.svg" alt="" style="width:80px; margin-left: 30px;">
                </a>

                <form class="form-inline my-2 my-lg-2">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" size="30">
                    <button class="btn btn-dark mr-2" type="submit">
                        <i class="fas fa-search"></i> <b>Search</b>
                    </button>
                </form>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link mr-2" style="color: silver" asp-area="" asp-controller="Home" asp-action="Index"><b>All Courses</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link mr-2" style="color: silver" asp-area="" asp-controller="Home" asp-action="Index"><b>My itens</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-create btn-round-sm mr-2" asp-area="" asp-controller="Course" asp-action="Start">
                                <b>Create</b>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-signin mr-2" asp-area="" asp-controller="Course" asp-action="Start"s>
                                <b>Sign In</b>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
